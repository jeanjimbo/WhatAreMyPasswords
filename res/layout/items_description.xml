<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_height="wrap_content"
		android:id="@+id/tableLayout1" 
		android:layout_width="match_parent"
		android:padding="80dip"
		android:stretchColumns="1"
		android:background="#e7ebf7">

	<!--  Titles -->
	<TableRow android:gravity="center_horizontal">
		<TextView android:text="Title"
			android:id="@+id/tv_title" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			style="@style/items_description_bold"/>
	</TableRow>
	
	<!--  Login -->
	<TableRow>
		<TextView android:text="Login"
			android:id="@+id/tv_login"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="left"
			style="@style/items_description_bold"/>
		<TextView android:text="Put it here"
			android:id="@+id/tv_login_data"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="right"
			style="@style/items_description_plain"/>
	</TableRow>
	
	<!-- Password -->
	<TableRow>
		<TextView android:id="@+id/tv_password" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content" 
			android:text="Password"
			android:gravity="left"
			style="@style/items_description_bold"/>
		<TextView android:text="Put it here"
			android:id="@+id/tv_password_data"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="right"
			android:password="true"
			style="@style/items_description_plain"/>
	</TableRow>
	
	<View
        android:layout_height="2dip"
        android:background="#FF909090" />
	
	<!-- Notes -->
	<TableRow>
		<TextView android:text="Notes"
			android:id="@+id/tv_notes"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="left"
			style="@style/items_description_bold"/>
		<TextView android:text="Put it here"
			android:id="@+id/tv_notes_data"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="right"
			style="@style/items_description_plain"/>
	</TableRow>
	
</TableLayout>