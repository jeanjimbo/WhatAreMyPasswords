<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ebeletskiy.gmail.com.passwords"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="11" />

    <supports-screens
        android:normalScreens="false"
        android:smallScreens="false"
        android:largeScreens="false"
        android:xlargeScreens="true" >
    </supports-screens>

    <application
        android:debuggable="false"
        android:icon="@drawable/icon"
        android:label="@string/appname"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity android:name=".activities.LaunchActivityManager" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.FirstTimeActivity"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".activities.CheckPassword"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity android:name=".prefs.ApplicationPreferences" >
        </activity>
        <activity android:name=".activities.ChangePassword" >
        </activity>
        <activity android:name=".activities.GeneratePasswords" >
        </activity>
    </application>

</manifest>